@{
    ViewData["Title"] = "Meter Management Dashboard";
    var ocrText = ViewBag.OcrResult as string;
    var error = ViewBag.Error as string;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container-fluid py-4 px-3 mt-5">
    <!-- Header Section -->
    <div class="bg-white rounded-4 shadow-sm p-4 mb-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
            <div>
                <h2 class="fw-bold mb-1 text-dark">
                    <i class="bi bi-speedometer2 text-primary me-2"></i> Meter Management
                </h2>
                <p class="text-muted mb-0">
                    <i class="bi bi-info-circle me-1"></i> Track meter data, revenue, and consumption
                </p>
            </div>
            <div class="mt-3 mt-md-0">
                <a asp-controller="AdminPage" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="bg-white rounded-4 shadow-sm p-4 h-100">
                <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 text-primary icon-circle me-3">

                        <i class="bi bi-lightning-charge fs-3"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Active Meters</h6>
                        <h3 class="fw-bold mb-0">@ViewBag.ActiveMeter</h3>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="badge bg-success bg-opacity-10 text-success">
                        <i class="bi bi-arrow-up me-1"></i> @ViewBag.NewMeter new this month
                    </span>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="bg-white rounded-4 shadow-sm p-4 h-100">
                <div class="d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 text-info icon-circle me-3">
                        <i class="bi bi-graph-up fs-3"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Average Consumption</h6>
                        <h3 class="fw-bold mb-0">@ViewBag.AvgElecCons kWh / @ViewBag.AvgWaterCons m³</h3>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="badge bg-primary bg-opacity-10 text-primary">This Month</span>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="bg-white rounded-4 shadow-sm p-4 h-100">
                <div class="d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 text-success icon-circle me-3">
                        <i class="bi bi-cash fs-3"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Monthly Revenue</h6>
                        <h3 class="fw-bold mb-0">₱ @ViewBag.MonthBill</h3>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="badge bg-success bg-opacity-10 text-success">
                        <i class="bi bi-currency-dollar me-1"></i> Income
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions Section -->
    <div class="row g-4">
        <!-- Reading Card -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body">
                    <div class="d-flex mb-3">
                        <div class="bg-primary bg-opacity-10 text-primary icon-circle me-3">
                            <i class="bi bi-speedometer2 fs-2"></i>
                        </div>
                        <div>
                            <h5 class="mb-1 fw-semibold">Meter Reading</h5>
                            <p class="text-muted small mb-0">Monthly Data Collection</p>
                        </div>
                    </div>
                    <p class="text-muted mb-3">Submit new readings for accurate billing.</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-success bg-opacity-10 text-success">
                            <i class="bi bi-check-circle me-1"></i> Operational
                        </span>
                        <a asp-controller="Meter" asp-action="MeterReading" class="btn btn-primary btn-sm">
                            <i class="bi bi-plus-circle me-1"></i> View Readings
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Meter Inventory -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body">
                    <div class="d-flex mb-3">
                        <div class="bg-info bg-opacity-10 text-info p-3 icon-circle me-3">
                            <i class="bi bi-hdd-stack fs-2"></i>
                        </div>
                        <div>
                            <h5 class="mb-1 fw-semibold">Meter Inventory</h5>
                            <p class="text-muted small mb-0">Manage 24 Devices</p>
                        </div>
                    </div>
                    <p class="text-muted mb-3">View and configure active meters.</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-warning bg-opacity-10 text-warning">
                            <i class="bi bi-exclamation-triangle me-1"></i> Status check
                        </span>
                        <a asp-controller="Meter" asp-action="Meter" class="btn btn-outline-info btn-sm">
                            <i class="bi bi-list-ul me-1"></i> View All
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Billing -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body">
                    <div class="d-flex mb-3">
                        <div class="bg-success bg-opacity-10 text-success icon-circle me-3">
                            <i class="bi bi-cash-stack fs-2"></i>
                        </div>
                        <div>
                            <h5 class="mb-1 fw-semibold">Billing Center</h5>
                            <p class="text-muted small mb-0">₱ @ViewBag.MonthBill generated</p>
                        </div>
                    </div>
                    <p class="text-muted mb-3">Access billing history and payment records.</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-danger bg-opacity-10 text-danger">
                            <i class="bi bi-clock-history me-1"></i> @ViewBag.UnpaidBill Unpaid
                        </span>
                        <a asp-controller="Meter" asp-action="Billings" class="btn btn-success btn-sm">
                            <i class="bi bi-graph-up me-1"></i> View Bills
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    body {
        background-color: #f8f9fa;
    }

    .rounded-4 {
        border-radius: 1rem !important;
    }

    .icon-circle {
        width: 55px;
        height: 55px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .shadow-sm {
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.05) !important; /* softer shadow */
    }

    .badge {
        font-size: 0.75rem;
        font-weight: 500;
        border-radius: 0.5rem;
    }
</style>
