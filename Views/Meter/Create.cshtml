@model MeterDto

<div class="min-vh-100 d-flex justify-content-center align-items-center">
    <div class="bg-white p-5 rounded-4 shadow-sm" style="width: 100%; max-width: 480px;">
        <h3 class="text-center fw-bold mb-1">New Meter</h3>
        <p class="text-center text-muted mb-4 small">
            Enter the meter number and type below.
        </p>

        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Meter Number</label>
                <input class="form-control" asp-for="Meter_Number" type="number" />
                <span asp-validation-for="Meter_Number" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label class="form-label">Meter Type</label>
                <select class="form-select" asp-for="MeterType">
                    <option value="" selected disabled>-- Select Meter Type --</option>
                    <option value="Water">Water</option>
                    <option value="Electric">Electric</option>
                </select>
                <span asp-validation-for="MeterType" class="text-danger small"></span>
            </div>

            <div class="d-grid mb-2">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="d-grid">
                <a asp-action="Meter" asp-controller="Meter" class="btn btn-light text-primary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    .form-control,
    .form-select {
        border-radius: 0.5rem;
        font-size: 0.95rem;
    }

    .btn-primary {
        background: #2a62ff;
        border: none;
    }

        .btn-primary:hover {
            background: #1a4ed8;
        }

    .btn-light {
        background: #f1f5f9;
    }

    .rounded-4 {
        border-radius: 1rem !important;
    }
</style>
