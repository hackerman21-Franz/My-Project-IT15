@model MeterDto
@{
}
<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">New Meter</h2>

		<form method="post" enctype="multipart/form-data">
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Meter Number</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Meter_Number" type="number" />
					<span asp-validation-for="Meter_Number" class="text-danger"></span>
				</div>
			</div>
			<div class="row">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
				<div class=" col-sm-4 d-grid">
					<a class="btn btn-outline-primary" asp-action="Meter" asp-controller="Meter">
						Cancel
					</a>
				</div>
			</div>
		</form>
	</div>
</div>

