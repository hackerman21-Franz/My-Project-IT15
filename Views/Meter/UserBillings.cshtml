@model List<MyProjectIT15.Models.Billing>

@{
    ViewBag.Title = "My Bills";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <div>
            <h2 class="fw-bold mb-0">@ViewBag.Title</h2>
            <p class="text-muted small mb-0">View and track your latest billing information and payment status.</p>
        </div>

        <div class="d-flex gap-2 flex-wrap">
            <a class="btn btn-primary rounded px-4" asp-controller="Meter" asp-action="UserBillingHistory">
                <i class="bi bi-receipt me-1"></i> Billing History
            </a>
            <a class="btn btn-outline-primary rounded px-4" asp-controller="Meter" asp-action="UserPaymentHistory">
                <i class="bi bi-credit-card me-1"></i> Payment History
            </a>
            <a class="btn btn-outline-secondary rounded px-4" asp-controller="AdminPage" asp-action="Tenant">
                <i class="bi bi-arrow-left-circle me-1"></i> Back
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-borderless align-middle mb-0">
                    <thead class="bg-light text-secondary small text-uppercase">
                        <tr>
                            <th>ID</th>
                            <th>Tenant Name</th>
                            <th>Room Meter ID</th>
                            <th>Reading Date</th>
                            <th>Due Date</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var billing in Model)
                            {
                                <tr>
                                    <td>@billing.Id</td>
                                    <td>
                                        @(
                                            billing.User != null
                                            ? $"{billing.User.FirstName} {billing.User.MiddleName} {billing.User.LastName}"
                                            : "No Tenant"
                                            )
                                    </td>
                                    <td>@billing.MeterReading?.RoomMeterId</td>
                                    <td>@billing.ReadingDate.ToString("MMM dd, yyyy")</td>
                                    <td>@billing.DueDate.ToString("MMM dd, yyyy")</td>
                                    <td>₱ @billing.TotalAmount.ToString("N2")</td>
                                    <td>
                                        <span class="badge @(billing.Status.ToLower() == "paid" ? "bg-success" : "bg-warning text-dark") rounded-pill">
                                            @billing.Status
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <button type="button" class="btn btn-sm btn-success rounded" data-bs-toggle="modal" data-bs-target="#Modal_@billing.Id">
                                            <i class="bi bi-eye me-1"></i> View
                                        </button>

                                        <!-- Modal -->
                                        <div class="modal fade" id="Modal_@billing.Id" tabindex="-1" aria-labelledby="billingModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-lg modal-dialog-centered">
                                                <div class="modal-content border-0 shadow-lg rounded-4">
                                                    <div class="modal-header bg-light border-bottom-0">
                                                        <h5 class="modal-title fw-bold" id="billingModalLabel">Billing Details</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <!-- Your detailed billing logic here -->
                                                        <p><strong>Tenant:</strong> @(billing.User != null ? $"{billing.User.FirstName} {billing.User.MiddleName} {billing.User.LastName}" : "N/A")</p>
                                                        <p><strong>Meter ID:</strong> @billing.MeterReading?.RoomMeterId</p>
                                                        <p><strong>Electric Reading Date:</strong> @billing.ReadingDate.ToString("MMM dd, yyyy")</p>
                                                        <p><strong>Due Date:</strong> @billing.DueDate.ToString("MMM dd, yyyy")</p>
                                                        <p><strong>Total Amount:</strong> ₱ @billing.TotalAmount.ToString("N2")</p>
                                                        <p class="text-muted small">More detailed breakdown can be added here.</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">No billing records available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .btn {
        font-size: 0.9rem;
    }

    .table th,
    .table td {
        vertical-align: middle;
    }

    .card {
        overflow: hidden;
    }

    .badge {
        font-size: 0.75rem;
        padding: 0.4em 0.7em;
    }

    .btn-sm i {
        vertical-align: middle;
    }
</style>


<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.3/html2pdf.bundle.min.js"></script>
