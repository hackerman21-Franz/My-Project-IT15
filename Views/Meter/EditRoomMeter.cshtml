@model RoomMeterDto

<div class="min-vh-100 d-flex justify-content-center align-items-center">
    <div class="bg-white p-5 rounded-4 shadow-sm" style="width: 100%; max-width: 480px;">
        <h3 class="text-center fw-bold mb-1">Edit Room Meters</h3>
        <p class="text-center text-muted mb-4 small">
            Edit room and meter to assignment
        </p>

        <form method="post" asp-action="EditRoomMeter" asp-controller="Meter">
            <div class="mb-3">
                <label asp-for="RoomId" class="form-label">Room Number</label>
                <select asp-for="RoomId" asp-items="@(new SelectList(ViewBag.Rooms, "Id", "Room_Number"))" class="form-select">
                    <option value="" selected disabled>-- Select Room --</option>
                </select>
                <span asp-validation-for="RoomId" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MeterId" class="form-label">Meter Number</label>
                <select asp-for="MeterId" asp-items="@(new SelectList(ViewBag.Meters, "Id", "Meter_Number"))" class="form-select">
                    <option value="" selected disabled>-- Select Meter --</option>
                </select>
                <span asp-validation-for="MeterId" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Status" class="form-label">Status</label>
                <select asp-for="Status" asp-items="@(new SelectList(ViewBag.Status))" class="form-select">
                    <option value="" selected disabled>-- Select Status --</option>
                </select>
                <span asp-validation-for="Status" class="text-danger small"></span>
            </div>

            <div class="d-grid mb-2">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="d-grid">
                <a asp-action="RoomMeter" asp-controller="Meter" class="btn btn-light text-primary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    .form-control,
    .form-select {
        border-radius: 0.5rem;
        font-size: 0.95rem;
    }

    .btn-primary {
        background: #2a62ff;
        border: none;
    }

        .btn-primary:hover {
            background: #1a4ed8;
        }

    .btn-light {
        background: #f1f5f9;
    }

    .rounded-4 {
        border-radius: 1rem !important;
    }
</style>