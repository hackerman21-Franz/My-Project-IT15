@{
    ViewBag.Title = "Payment Success";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card border-0 shadow-sm rounded-4 p-5 text-center" style="max-width: 600px; width: 100%;">
        <div class="mb-4">
            <div class="text-success mb-3" style="font-size: 3rem;">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <h2 class="fw-bold mb-2" style="color:green;">Payment Successful</h2>
            <p class="text-muted mb-1" >Your payment has been initialized via <strong>GCash</strong>.</p>
            <p class="text-muted">Please complete the transaction using your GCash mobile app. You’ll be notified once the payment is confirmed.</p>
        </div>

        <hr class="my-4" />

        <a class="btn btn-blue px-4 py-2 rounded-pill fw-semibold" asp-controller="Meter" asp-action="UserBillings">
            <i class="bi bi-arrow-left me-1"></i> Back to My Bills
        </a>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fc;
    }

    .card h2 {
        font-size: 1.75rem;
    }

    .btn-blue {
        background-color: #0d6efd;
        border: none;
        color: white;
        transition: background-color 0.3s ease;
    }

        .btn-blue:hover {
            background-color: #0b5ed7;
            color: white;
        }
</style>
