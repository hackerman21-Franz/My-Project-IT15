@model MyProjectIT15.Models.UserRoomDto

@{
    ViewBag.Title = "Assign Tenant to Room";
}

<h2>Assign Tenant to Room</h2>

<form asp-action="AssignTenant" method="post">
    @Html.AntiForgeryToken()

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    <div class="form-group">
        <label>Room</label>
        <select asp-for="RoomId" asp-items="@(new SelectList(ViewBag.Rooms, "Id", "Room_Number"))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Tenant</label>
        <select asp-for="TenantId" asp-items="@(new SelectList(ViewBag.Users, "Id", "Email"))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Status</label>
        <input asp-for="Status" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Assign</button>
</form>
