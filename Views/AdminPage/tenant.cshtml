@{
    ViewData["Title"] = "Tenant Page";
}

<!-- Hero Section -->
<div class="container text-center mt-5">
    <h1 class="display-4">Welcome to Tenant Page</h1>
    <p class="lead">Manage your rentals, track your payments, and get assistance — all in one place.</p>
    <a href="#features" class="btn btn-primary btn-lg mt-3 mb-3">Explore Features</a>
</div>

<!-- Feature Section -->
<section id="features" class="py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Rental Overview</h5>
                        <p class="card-text">See all your rental properties and lease details at a glance.</p>
                        <a href="#" class="btn btn-outline-primary">View Rentals</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Payment History</h5>
                        <p class="card-text">Track your monthly payments and download receipts easily.</p>
                        <a href="#" class="btn btn-outline-primary">View Payments</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Maintenance & Support</h5>
                        <p class="card-text">Submit maintenance requests or contact support for help.</p>
                        <a href="#" class="btn btn-outline-primary">Get Support</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
