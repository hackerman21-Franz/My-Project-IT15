@{
    ViewData["Title"] = "Reports";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold mb-0">Financial Reports</h1>
            <p class="text-muted mb-0">Track paid bills and total income</p>
        </div>
        <div class="btn-group">
        <button type="button" class="btn btn-primary" onclick="generatePDF()"><i class="bi bi-download me-2"></i>Export Report</button>
        <a class="btn btn-secondary" asp-action="Index" asp-controller="AdminPage">Go Back</a>
        </div>
    </div>
    <script>
        function generatePDF() {
            const modalContent = document.querySelector('#reportContent').cloneNode(true);
            const options = {
                margin: 10,
                filename: `Reports_${new Date().toLocaleDateString().replace(/\//g, '-')}.pdf`,
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2 },
                jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
            };
            html2pdf().set(options).from(modalContent).save();
        }
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const startDateInput = document.getElementById('startDate');
            const endDateInput = document.getElementById('endDate');
            const applyFilterBtn = document.getElementById('applyFilter');
            const resetFilterBtn = document.getElementById('resetFilter');
            const billingTable = document.getElementById('billingTable');

            applyFilterBtn.addEventListener('click', function () {
                const startDate = new Date(startDateInput.value);
                const endDate = new Date(endDateInput.value);

                if (isNaN(startDate.getTime())) {
                    alert('Please select a valid start date');
                    return;
                }

                if (isNaN(endDate.getTime())) {
                    alert('Please select a valid end date');
                    return;
                }

                if (startDate > endDate) {
                    alert('Start date cannot be after end date');
                    return;
                }

                const rows = billingTable.getElementsByTagName('tr');
                for (let row of rows) {
                    const dateCell = row.cells[3];
                    const dateText = dateCell ? dateCell.textContent.trim() : '';
                    const rowDate = new Date(dateText);
                    if (rowDate >= startDate && rowDate <= endDate) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                }
            });

            resetFilterBtn.addEventListener('click', function () {
                startDateInput.value = '';
                endDateInput.value = '';
                const rows = billingTable.getElementsByTagName('tr');
                for (let row of rows) {
                    row.style.display = '';
                }
            });
        });
    </script>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted mb-2">Total Income</h6>
                            <h2 class="fw-bold mb-0">₱@ViewBag.TotalBillAmount</h2>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-cash-stack text-primary" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-success bg-opacity-10 text-success">
                            <i class="bi bi-arrow-up me-1"></i>This month
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted mb-2">Paid Bills</h6>
                            <h2 class="fw-bold mb-0">@ViewBag.TotalBillingCount</h2>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="bi bi-receipt text-success" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-success bg-opacity-10 text-success">
                            <i class="bi bi-arrow-up me-1"></i>This month
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted mb-2">Average Payment</h6>
                            <h2 class="fw-bold mb-0">₱@ViewBag.AverageBillAmount</h2>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded">
                            <i class="bi bi-graph-up text-info" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-success bg-opacity-10 text-success">
                            <i class="bi bi-arrow-up me-1"></i>This month
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Date Range Picker -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">Filter by Date Range</h5>
            <form id="dateFilterForm" method="get" action="@Url.Action("Reports")">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="startDate" class="form-label">Start Date</label>
                        <input type="date" class="form-control" id="startDate" name="startDate"
                               value="@Context.Request.Query["startDate"]">
                    </div>
                    <div class="col-md-3">
                        <label for="endDate" class="form-label">End Date</label>
                        <input type="date" class="form-control" id="endDate" name="endDate"
                               value="@Context.Request.Query["endDate"]">
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary" id="applyFilter">
                            <i class="bi bi-funnel me-2"></i>Apply Filter
                        </button>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <a href="@Url.Action("Reports")" class="btn btn-outline-secondary" id="resetFilter">
                            <i class="bi bi-arrow-counterclockwise me-2"></i>Reset
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Reports Table -->
    <div class="card shadow-sm" id="reportContent">
        <div class="card-header bg-white border-0">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Paid Bills</h5>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Bill ID</th>
                            <th>Tenant</th>
                            <th>Room</th>
                            <th>Date Paid</th>
                            <th>Amount</th>
                            <th>Payment Method</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="billingTable">
                        @foreach (var item in ViewBag.CombinedData)
                        {
                            @foreach (var payment in item.Payments)
                            {
                                <tr>
                                    <td>@item.Id</td> <!-- Bill ID -->
                                    <td>@item.FirstName @item.LastName</td> <!-- Tenant (Full Name) -->
                                    <td>@item.Room_Number</td> <!-- Room Number -->
                                    <td>@payment.CreatedAt.ToString("MMMM dd, yyyy")</td> <!-- Date Paid -->
                                    <td>₱@item.TotalAmount</td> <!-- Amount -->
                                    <td>@payment.PaymentMethod</td> <!-- Payment Method -->
                                    <td>@item.Status</td> <!-- Billing Status -->
                                </tr>
                            }
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td><strong>Total Paid: ₱</strong>@ViewBag.TotalBillAmount</td>
                            </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
    <!-- Income Chart Card -->
    

