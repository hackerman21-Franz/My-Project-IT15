﻿@{
    ViewData["Title"] = "Welcome to Roomify";
}

@using Microsoft.AspNetCore.Identity
@using MyProjectIT15.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@section Styles {
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Inter:wght@100..900&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Inter:wght@100..900&family=Pacifico&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/landingpage.css" asp-append-version="true" />
}



@if (SignInManager.IsSignedIn(User))
{
    <div class="container py-5 min-vh-100 d-flex justify-content-center align-items-center">
        <div class="card shadow-lg rounded-4 p-4 w-100" style="max-width: 700px;">
            <div class="text-center mb-4">
                <h1 class="display-5 fw-bold">Welcome!</h1>
                <p class="text-muted">You are logged in as <span class="badge bg-secondary text-uppercase">@User.Identity?.Name</span></p>
            </div>

            <div class="row g-3 justify-content-center">
                @if (User.IsInRole("admin"))
                {
                    <div class="col-12 col-md-6">
                        <a class="btn btn-outline-primary w-100 btn-lg" asp-controller="AdminPage" asp-action="Index">
                            <i class="bi bi-speedometer2 me-2"></i> Admin Dashboard
                        </a>
                    </div>
                    <div class="col-12 col-md-6">
                        <a class="btn btn-outline-dark w-100 btn-lg" asp-controller="AdminPage" asp-action="ViewAssignedTenants">
                            <i class="bi bi-person-bounding-box me-2"></i> Assigned Tenants
                        </a>
                    </div>
                }
                else if (User.IsInRole("owner"))
                {
                    <div class="col-12 col-md-6">
                        <a class="btn btn-outline-success w-100 btn-lg" asp-controller="AdminPage" asp-action="Owner">
                            <i class="bi bi-house-check me-2"></i> Owner Panel
                        </a>
                    </div>
                    <div class="col-12 col-md-6">
                        <a class="btn btn-outline-warning w-100 btn-lg" asp-controller="AdminPage" asp-action="Rooms">
                            <i class="bi bi-door-open me-2"></i> Manage Rooms
                        </a>
                    </div>
                }
                else if (User.IsInRole("tenant"))
                {
                    <div class="col-12 col-md-6">
                        <a class="btn btn-outline-info w-100 btn-lg" asp-controller="AdminPage" asp-action="Tenant">
                            <i class="bi bi-person-circle me-2"></i> Tenant Dashboard
                        </a>
                    </div>
                    <div class="col-12 col-md-6">
                        <a class="btn btn-outline-secondary w-100 btn-lg" asp-controller="Tenant" asp-action="MyRoom">
                            <i class="bi bi-house-door me-2"></i> My Room
                        </a>
                    </div>
                }
            </div>

            <div class="text-center mt-4">
                <p class="small">
                    Learn about <a href="https://learn.microsoft.com/aspnet/core" target="_blank">building Web apps with ASP.NET Core</a>.
                </p>
            </div>
        </div>
    </div>

}
else
{
    <div>

        <!-- CONTENTS -->

        <section class="text-center py-5">
            <div class="container " style="margin-top: 235px;">
                <div class="top-texts">
                    <h1>RJF Power Pulse</h1>
                </div>
                <p class="lead mt-3 fw-bold">
                    Utility Management System for Dorms
                </p>
                <p class="text-muted">
                    Our system helps tenants check their electricity usage, view bills, and pay online through PayMongo. Admins can manage tenant accounts, monitor consumption, and keep everything organized in one place.
                </p>
                <a href="#" class="btn btn-primary mt-3" style="padding: 10px 30px;">Get Started</a>
            </div>
        </section>

        <!-- Large Image Section -->
        <section class="py-5 text-center bg-white " style="margin-top:290px;">
            <div class="container">
                <h2 class="fw-bold mb-4">All-in-One Dorm Utility Platform</h2>
                <p class="text-muted mb-5">Manage tenants, payments, and room assignments seamlessly.</p>
                <div class="row g-5">
                    <div class="col-md-4">
                        <img src="~/images/peopls.png" alt="Tenant Management" class="img-fluid mb-3" style="height: auto; width: 200px;">

                        <h5 class="fw-bold">Tenant Management</h5>
                        <p class="text-muted" style="width:250px;">Easily manage tenant details and monitor their utility usage.</p>
                    </div>
                    <div class="col-md-4">
                        <img src="~/images/wallet.png" alt="Billing & Payments" class="img-fluid mb-3" style="height: auto; width: 200px;">
                        <h5 class="fw-bold">Billing & Payments</h5>
                        <p class="text-muted">Track bills and accept online payments through PayMongo.</p>
                    </div>
                    <div class="col-md-4">
                        <img src="~/images/door.png" alt="Room Assignment" class="img-fluid mb-3" style="height: auto; width: 200px;">
                        <h5 class="fw-bold">Room Assignment</h5>
                        <p class="text-muted">Assign and update rooms while tracking occupancy.</p>
                    </div>
                </div>
            </div>
        </section>






        <!-- Zigzag Features Section (3 Items) -->
        <section class="py-5">
            <div class="container">
                <div class="text-center" style="margin-bottom:200px; margin-top:300px;">
                    <h2 class="fw-bold">Manage Your Dorm Utilities with Ease</h2>
                    <p class="text-muted">
                        Track consumption, pay bills online, and stay informed." or "Effortlessly monitor water and electricity usage and manage your account.
                    </p>
                </div>

                <div class="row align-items-center g-5 mb-5">
                    <div class="col-md-6">
                        <h5>Convenient Online Bill Paymen</h5>
                        <p class="text-muted" >Securely pay your utility bills online anytime, anywhere. Choose from various payment methods for a hassle-free experience.</p>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-black rounded-3 mx-auto" style="width: 100%; height: 500px;">

                        </div>
                    </div>
                </div>

                <div class="row align-items-center g-5 mb-5 flex-md-row-reverse">
                    <div class="col-md-6">
                        <h5>Manage Your Account</h5>
                        <p class="text-muted">View your account details, payment history, and manage your profile information all in one place.</p>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-black rounded-3 mx-auto" style="width: 100%; height: 500px;"></div>
                    </div>
                </div>

                <div class="row align-items-center g-5">
                    <div class="col-md-6">
                        <h5>Experience Smart Utility Management</h5>
                        <p class="text-muted">Sign up now to easily track your utilities and manage your payments.</p>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-black rounded-3 mx-auto" style="width: 100%; height: 500px;"></div>
                    </div>
                </div>

            </div>
        </section>

        <!-- Final Large Image Section 
        <section class="py-5">
            <div class="container">
                <div class="bg-dark rounded-3" style="height: 300px;"></div>
            </div>
        </section>
        -->



    </div> <!-- End of scrollable div -->


}
