@model MyProjectIT15.Views.Home.TenantDashboardModel
@{

    <div class="container-fluid" style="margin-top:50px;">



        <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
            <div class="header">
                <h1 class="mb-2">Tenant Dashboard</h1>
                <small class="text-muted">Monitor and manage your utility consumption</small>
            </div>
            <div class="d-flex gap-2 align-items-center header-controls">
                <button type="button" class="btn btn-outline-primary">Download Report</button>
                <button type="button" class="btn btn-primary">Download Current Receipt</button>
            </div>
        </div>

        <!-- Row 1: Three cards -->
        <div class="row g-4 " style="margin-bottom: 50px;">
            <div class="col-md-4">
                <div class="usage-card bg-white" id="box1">
                    <h2 class="usage-label mb-3">Electricity</h2>
                    <div class="usage-value mb-2">285 kWh</div>
                    <div class="usage-comparison">
                    <span class="badge bg-success">82%</span> Last month
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="usage-card bg-white" id="box2">
                    <h2 class="usage-label mb-3">Water</h2>
                    <div class="usage-value mb-2">285 kWh</div>
                    <div class="usage-comparison">
                        <span class="badge bg-success">82%</span> Last month
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="usage-card bg-white" id="box3">
                    <h2 class="usage-label mb-3">Internet</h2>
                    <div class="usage-value mb-2">285 kWh</div>
                    <div class="usage-comparison">
                        <span class="badge bg-success">82%</span> Last month
                    </div>
                </div>
            </div>
        </div>

        <!-- Row 2: One large card -->
        <div class="row g-4 " style="margin-bottom: 50px;">
            <div class="col-12">
                <div class="card-placeholder card-lg" style="height:450px; width:100%; padding:10px;" id="big-box">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title">Consumption Trends</h5>
                            <div>
                                <button type="button" class="btn" data-bs-toggle="button" id="btn-bigcard">Current</button>
                                <button type="button" class="btn" data-bs-toggle="button" id="btn-bigcard2">Tomorrow</button>
                                <button type="button" class="btn" data-bs-toggle="button" id="btn-bigcard3">Today</button>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>

        <!-- Row 3: Three medium cards -->
        <div class="row g-4" style="margin-bottom: 50px;">
            <div class="col-md-4">
                <div class="card-placeholder p-3 d-flex flex-column justify-content-start" style="height:350px;" id="boxbottom1">
                    <!-- Title -->
                    <h1 class="" style="margin-bottom:50px; margin-top:10px;">Quick Actions</h1>

                    <!-- Mini Cards Container -->
                    <div class="d-flex flex-wrap justify-content-center gap-2">
                        <!-- Mini Card 1 -->
                        <div class="d-flex flex-column align-items-center justify-content-center text-center"
                             style="width: 95px; height: 84px; border-radius: 5px; background: rgba(75, 150, 248, 0.08);" id="minicard1-actions">
                            <i class="bi bi-star text-primary fs-4"></i>
                            <small>Star</small>
                        </div>

                        <!-- Mini Card 2 -->
                        <div class="d-flex flex-column align-items-center justify-content-center text-center"
                             style="width: 95px; height: 84px; border-radius: 5px; background: rgba(75, 150, 248, 0.08);" id="minicard2-actions">
                            <i class="bi bi-heart text-danger fs-4"></i>
                            <small>Like</small>
                        </div>

                        <!-- Mini Card 3 -->
                        <div class="d-flex flex-column align-items-center justify-content-center text-center"
                             style="width: 95px; height: 84px; border-radius: 5px; background: rgba(75, 150, 248, 0.08);" id="minicard3-actions">
                            <i class="bi bi-gear text-secondary fs-4"></i>
                            <small>Settings</small>
                        </div>

                        <!-- Mini Card 4 -->
                        <div class="d-flex flex-column align-items-center justify-content-center text-center"
                             style="width: 95px; height: 84px; border-radius: 5px; background: rgba(75, 150, 248, 0.08);" id="minicard4-actions">
                            <i class="bi bi-chat-dots text-info fs-4"></i>
                            <small>Chat</small>
                        </div>

                        <!-- Mini Card 5 -->
                        <div class="d-flex flex-column align-items-center justify-content-center text-center"
                             style="width: 95px; height: 84px; border-radius: 5px; background: rgba(75, 150, 248, 0.08);" id="minicard5-actions">
                            <i class="bi bi-person text-success fs-4"></i>
                            <small>User</small>
                        </div>

                        <!-- Mini Card 6 -->
                        <div class="d-flex flex-column align-items-center justify-content-center text-center"
                             style="width: 95px; height: 84px; border-radius: 5px; background: rgba(75, 150, 248, 0.08);" id="minicard6-actions">
                            <i class="bi bi-bell text-warning fs-4"></i>
                            <small>Alert</small>
                        </div>
                    </div>
                </div>


            </div>
            <div class="col-md-4">
                <div class="card-placeholder p-3 d-flex flex-column justify-content-start" style="height:350px;" id="boxbottom2">
                    <h1 class="" style="margin-bottom:50px; margin-top:10px;">Quick Actions</h1>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-placeholder p-3 d-flex flex-column justify-content-start" style="height:350px;" id="boxbottom3">
                    <h1 class="" style="margin-bottom:50px; margin-top:10px;">Quick Actions</h1>
                </div>
            </div>
        </div>

        <!-- Row 4: One wide card -->
        <div class="row g-4 mb-3">
            <div class="col-12">
                <div class="card p-4 border-0" id="big-box-bottom" style="background: white;">

                    <!-- Title and View All aligned on the same row -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="mb-0">Energy Saving Tips</h4>
                        <a href="#" class="text-primary">View all</a>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-4">
                            <div id="tipcard-1" class="p-3 h-100">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 36px; height: 36px;">
                                        <i class="bi bi-lightning-charge"></i>
                                    </div>
                                    <strong>Switch to LED Lighting</strong>
                                </div>
                                <p class="mb-0 small">LED bulbs use up to 75% less energy than traditional incandescent bulbs and last much longer.</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div id="tipcard-2" class="p-3 h-100">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 36px; height: 36px;">
                                        <i class="bi bi-droplet"></i>
                                    </div>
                                    <strong>Short Showers</strong>
                                </div>
                                <p class="mb-0 small">Reducing your shower time by just 2 minutes can save up to 10 gallons of water per shower.</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div id="tipcard-3" class="p-3 h-100">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="bg-warning text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 36px; height: 36px;">
                                        <i class="bi bi-thermometer-half"></i>
                                    </div>
                                    <strong>Optimal Thermostat Settings</strong>
                                </div>
                                <p class="mb-0 small">Set your thermostat to 68°F (20°C) in winter and 78°F (26°C) in summer to optimize energy usage.</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>


    </div>

