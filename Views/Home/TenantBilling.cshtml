@model MyProjectIT15.Views.Home.TenantBillingModel
@{
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
            <div class="header">
                <h1 class="mb-2">Billing</h1>
                <small class="text-muted">Manage your payments and billing information</small>
            </div>
            <div class="d-flex gap-2 align-items-center header-controls">
                <button type="button" class="btn btn-outline-primary">Download Report</button>
                <button type="button" class="btn btn-primary">Download Current Receipt</button>
            </div>
        </div>

        <div class="card mb-3" style="height:300px; padding:40px;">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4" id="billingtext">
                        <h5>Current Bill</h5>
                        <h1 class="fw-bold" id="total-amount">$159.42</h1>
                        <p class="text-muted mb-0" id="billing-period">Billing period: April 1 - April 30, 2025</p>
                        <p class="text-muted" id="due-date">Due date: April 28, 2025</p>
                        <button type="button" class="btn btn-primary btn-lg mt-2">Pay Now!</button>
                    </div>
                    <div class="col-md-7">
                        <h6 class="fw-bold">Charges Breakdown</h6>
                        <div class="mb-2">
                            <div class="d-flex justify-content-between">
                                <span>Electricity</span>
                                <span>$24.00</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-danger" role="progressbar" style="width: 90%;"></div>
                            </div>
                        </div>
                        <div class="mb-2">
                            <div class="d-flex justify-content-between">
                                <span>Water</span>
                                <span>$24.00</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-primary" role="progressbar" style="width: 85%;"></div>
                            </div>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <strong>Total</strong>
                            <strong>$120.00</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Row 1 -->
            <div class="col-md-4 mb-3">
                <div class="card" style="height: 450px;">
                    <div class="card-body">
                        <!-- Payment Method Content -->
                        <h5 class="mb-3 fw-semibold">Payment Method</h5>

                        <!-- Single Payment Card -->
                        <div class="d-flex justify-content-between align-items-center  p-3" style="width: 100%; height: 107px; flex-shrink: 0;" id="payment-card1">
                            <div class="d-flex align-items-center gap-3">
                                <!-- Circle Avatar -->
                                <div style="width: 48px; height: 48px; background-color: #93c5fd; border-radius: 50%;"></div>

                                <!-- Card Info -->
                                <div>
                                    <p class="mb-1 fw-medium" id="paymentcard1-text1">Paymongo ending in 4242</p>
                                    <p class="mb-0 text-secondary small" id="paymentcard1-text3">Default Payment Method</p>
                                </div>
                            </div>

                            <!-- Right Side -->
                            <div class="d-flex flex-column align-items-end gap-2">
                                <input type="checkbox" checked />
                                <a href="#" class="small text-primary">Edit</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-md-8 mb-3">
                <div class="card" style="height: 450px;">
                    <div class="card-body d-flex flex-column p-3">
                        <!-- Title and Search -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title mb-0">Billing History</h5>
                            <div class="input-group" style="width: 300px;">
                                <input type="text" class="form-control" placeholder="Search..." aria-label="Search" aria-describedby="button-addon2">
                                <button class="btn btn-outline-secondary" type="button" id="button-addon2">Search</button>
                            </div>
                        </div>

                        <!-- Scrollable Table Section -->
                        <div style="overflow-y: auto; height: 350px;">
                            <table class="table table-hover mb-0">
                                <thead class="table-light sticky-top bg-white">
                                    <tr>
                                        <th>#</th>
                                        <th>Date</th>
                                        <th>Customer</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
