                                    <tr><td>7</td><td>2025-04-07</td><td>Mark Lopez</td><td>₱520</td><td>Paid</td></tr>
                                    <tr><td>8</td><td>2025-04-08</td><td>Sara Cruz</td><td>₱630</td><td>Unpaid</td></tr>
                                    <tr><td>9</td><td>2025-04-09</td><td>Leo Ramos</td><td>₱490</td><td>Paid</td></tr>
                                    <tr><td>10</td><td>2025-04-10</td><td>Tina Beltran</td><td>₱510</td><td>Paid</td></tr>
