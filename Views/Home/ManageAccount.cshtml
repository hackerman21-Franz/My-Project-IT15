@page

@section Styles {
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Inter:wght@100..900&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Inter:wght@100..900&family=Pacifico&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/ManageAccount.css" asp-append-version="true" />
}

@model MyProjectIT15.Views.Home.ManageAccountModel
@{

    <div class="container py-5">
        <div class="row">
            <!-- Title -->
            <div class="col-12 mb-4">
                <h2 class="page-title">Manage Your Account</h2>
            </div>

            <!-- Sidebar -->
            <div class="col-md-3 mb-4">
                <div class="list-group shadow-sm" id="settingsTabs">
                    <button class="list-group-item list-group-item-action active" data-section="profile">
                        <i class="bi bi-person-fill section-icon"></i> Profile
                    </button>
                    <button class="list-group-item list-group-item-action" data-section="email">
                        <i class="bi bi-envelope-fill section-icon"></i> Email
                    </button>
                    <button class="list-group-item list-group-item-action" data-section="password">
                        <i class="bi bi-shield-lock-fill section-icon"></i> Password
                    </button>
                    <button class="list-group-item list-group-item-action" data-section="2fa">
                        <i class="bi bi-shield-check section-icon"></i> Two-Factor Auth
                    </button>
                    <button class="list-group-item list-group-item-action" data-section="data">
                        <i class="bi bi-archive-fill section-icon"></i> Personal Data
                    </button>
                </div>
            </div>

            <!-- Content -->
            <div class="col-md-9">
                <div class="card shadow p-4" id="settingsContent">
                    <!-- Content loads here -->
                </div>
            </div>
        </div>
    </div>

    <script>
        const tabs = document.querySelectorAll('#settingsTabs button');
        const content = document.getElementById('settingsContent');

        const sections = {
            profile: `
              <h4 class="fw-semibold mb-3"><i class="bi bi-person-fill me-2"></i>Profile</h4>
              <hr>
              <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" class="form-control" value="pranz@gmail.com" disabled>
              </div>
              <div class="mb-3">
                <label class="form-label">Phone Number</label>
                <input type="text" class="form-control" value="09121652894">
              </div>
              <button class="btn btn-primary mt-3"><i class="bi bi-save me-1"></i> Save Changes</button>
            `,
            email: `
              <h4 class="fw-semibold mb-3"><i class="bi bi-envelope-fill me-2"></i>Update Email</h4>
              <hr>
              <div class="mb-3">
                <label class="form-label">Current Email</label>
                <input type="email" class="form-control" value="pranz@gmail.com" disabled>
              </div>
              <div class="mb-3">
                <label class="form-label">New Email</label>
                <input type="email" class="form-control" placeholder="Enter new email">
              </div>
              <button class="btn btn-primary mt-3"><i class="bi bi-arrow-repeat me-1"></i> Update Email</button>
            `,
            password: `
              <h4 class="fw-semibold mb-3"><i class="bi bi-shield-lock-fill me-2"></i>Change Password</h4>
              <hr>
              <div class="mb-3">
                <label class="form-label">Current Password</label>
                <input type="password" class="form-control">
              </div>
              <div class="mb-3">
                <label class="form-label">New Password</label>
                <input type="password" class="form-control">
              </div>
              <div class="mb-3">
                <label class="form-label">Confirm New Password</label>
                <input type="password" class="form-control">
              </div>
              <button class="btn btn-primary mt-3"><i class="bi bi-shield-lock me-1"></i> Change Password</button>
            `,
            "2fa": `
              <h4 class="fw-semibold mb-3"><i class="bi bi-shield-check me-2"></i>Two-Factor Authentication</h4>
              <hr>
              <p class="mb-3">Enhance your account's security by enabling 2FA.</p>
              <button class="btn btn-outline-success"><i class="bi bi-phone me-1"></i> Enable 2FA</button>
            `,
            data: `
              <h4 class="fw-semibold mb-3"><i class="bi bi-archive-fill me-2"></i>Personal Data</h4>
              <hr>
              <p class="mb-3">You can request a copy of your personal data.</p>
              <button class="btn btn-secondary"><i class="bi bi-download me-1"></i> Request Data</button>
            `
        };

        // Load default
        content.innerHTML = sections.profile;

        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                tabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');

                const section = tab.getAttribute('data-section');
                content.innerHTML = sections[section];
            });
        });
    </script>


}